{% extends 'base.html.twig' %}

{% block title %}Hello AuthorController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
  {% block content %}
    <h1>Book</h1>
    {% if foundBook %}
        <div> 
            <p>Title of Book : {{ foundBook.title }}</p>
            <p>Publication Date : {{ foundBook.publicationDate | date('F j, Y') }}</p> 
            <p>Author : {{foundBook.author.username}}</p>
        </div>
    {% else %}
        <p>Aucun d√©tail d'auteur disponible.</p>
    {% endif %}
{% endblock %}

</div>
{% endblock %}